<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emptyJournalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="@dimen/valSeventy"
        android:layout_height="@dimen/valSeventy"
        android:padding="@dimen/valTwenty"
        android:layout_marginTop="280dp"
        android:background="@drawable/logo_style"
        android:contentDescription="@string/logo"
        android:src="@drawable/journal"
        app:layout_constraintBottom_toTopOf="@id/emptyJournalHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/emptyJournalHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/start_journaling"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_margin="@dimen/valFive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImageView" />

    <TextView
        android:id="@+id/emptyJournalSubHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/create_your_personal_journal"
        android:textAlignment="center"
        android:layout_margin="@dimen/valTen"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emptyJournalHeader" />

    <TextView
        android:id="@+id/emptyJournalSubHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/tap_the_plus_button_to_get_started"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emptyJournalSubHeader1" />

</androidx.constraintlayout.widget.ConstraintLayout>