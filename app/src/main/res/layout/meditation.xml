<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_timer"
    android:gravity="center">

    <TextView
        android:id="@+id/meditationTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/stopMeditation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meditationTimer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/valTwenty"
        android:backgroundTint="#FFA000"
        android:text="@string/stop_meditation"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/meditationAnimation"
        android:layout_width="220dp"
        android:layout_height="222dp"
        android:layout_below="@id/stopMeditation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/valForty"
        android:contentDescription="@string/meditation_desc" />
</RelativeLayout>